{
    "compilerOptions": {
        "target": "es2022",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.mts"
, "src/index.ts"    ]
}